## HW
pcm.hda { type hw; card Intel; device 1 }
ctl.hda { type hw; card Intel; device 1 }
pcm.cmi { type hw; card CMI8788; device 1 }
ctl.cmi { type hw; card CMI8788; device 1 }
## DEFAULT
ctl.!default { type hw; slave.ctl hda }
pcm.!default { type hw; slave.pcm hda }
## BS2B
pcm.crossfeed { type plug; slave.pcm "plug:tap_bs2b" }
pcm.headsets { type plug; slave.pcm "plug:bs2b" }
pcm.bs2b {
	type ladspa
	# hardware mixer
	slave.pcm plughw:0,1
	# software mixer
	slave.pcm "plug:dmixer"
	path /usr/lib/ladspa
	plugins [
	{
		id 4221
		label bs2b
		input { controls [ 700 4.5 ] }
	}
	]
}
pcm.tap_bs2b {
	type ladspa
	slave.pcm "plug:dmixer"
	path "/usr/local/lib/ladspa"
	plugins [
	{
		label tap_bs2b
		input { controls [ 2 1 ] }
	}
	]
}
## JACK output
pcm.jack {
	type jack
	playback_ports 
	{
		0 alsa_pcm:playback_1
		1 alsa_pcm:playback_2
	}
	capture_ports 
	{
		0 alsa_pcm:capture_1
		1 alsa_pcm:capture_2
	}
}
pcm.jackplug { type plug; slave.pcm "plug:jack" }
## DMIX
pcm.mixed { type plug; slave.pcm "plug:dmixer" }
pcm.dmixer {
	type dmix
	ipc_key 0050853
	ipc_perm 0660
	ipc_gid audio
	slave { 
		channel 6
		pcm {
			#format S32_LE
			format S16_LE
			rate 48000
			type hw
			slave.pcm cmi
		}
		period_size 1024
		#period_time 20000
		#periods 8
		buffer_size 8192
		#buffer_time 160000
	}
	capture.pcm "hw:0"
}
## MBEQ
pcm.plugeq { type ladspa; slave.pcm "plug:eq" }
pcm.eq {
	type ladspa
	# hardware mixer
	#slave.pcm plughw:0,0
	# software mixer 
	slave.pcm plug:dmix
	path /usr/lib/ladspa
	plugins [
	{
		label mbeq
		id 1197
		input {
			#bands: 50hz,100hz,156hz,220hz,311hz,440hz,622hz,880hz,1250hz,1750hz,
			#25000hz,50000hz,10000hz,20000hz
			controls [ -5 -5 -5 -5 -5 -10 -20 -15 -10 -10 -10 -10 -10 -3 -2 ]
		}
	}
	]
}
## EQUALIZER
ctl.equal { type equal }
pcm.equal { 
	type equal
	# hardware mixer
	#slave.pcm "plughw:0,1"
	# software mixer
	slave.pcm plug:dmix
}
pcm.plugequal { type plug; slave.pcm "plug:equal" }
## ALSA EMULATION
pcm.alsa {
	type oss
	device /dev/oss/oss_cmi878x0/pcm1
}
mixer.alsa {
	type oss
	device /dev/oss/oss_cmi878x0/mix1
}
## OSS EMULATION (through the EQ)
ctl.oss { type oss; }
pcm.oss { type plug; slave.pcm "plug:eq" }
