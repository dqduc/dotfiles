# $Id: $HOME/.asoundrc,v 1.1 2011/11/17 -tclover Exp $
#
## HW
pcm.hda { type hw; card 0; device 1; }
ctl.hda { type hw; card 0; device 1; }
pcm.cmi { type hw; card 1; device 1; }
ctl.cmi { type hw; card 1; device 1; }
## BS2B
ctl.bs2b { type ladspa; }
pcm.bs2b {
	type ladspa
	# hardware mixer
	#slave.pcm plughw:0,1
	# software mixer
	slave.pcm plug:dmix
	path /usr/lib/ladspa
	plugins [
	{
		label bs2b
		input { controls [ 700 4.5 ] }
	}
	]
}
pcm.headsets { type plug; slave.pcm bs2b; }
## JACK output
ctl.jack { type jack; }
pcm.jack {
	type jack
	playback_ports 
	{
		0 system:playback_1
		1 system:playback_2
	}
	capture_ports 
	{
		0 system:capture_1
		1 system:capture_2
	}
}
pcm.jackplug { type plug; slave.pcm jack; }
## DMIX
ctl.dmixer { type dmix; }
pcm.dmixer {
	type dmix
	ipc_key 7667 
	ipc_perm 0660
	ipc_gid audio
	slave.pcm { type hw; slave.pcm cmi; }
}
pcm.mixed { type plug; slave.pcm dmixer; }
## MBEQ
ctl.eq { type ladspa; }
pcm.eq {
	type ladspa
	# hardware mixer
	#slave.pcm plughw:0,0
	# software mixer 
	slave.pcm plug:dmix
	path /usr/lib/ladspa
	plugins [
	{
		label mbeq
		id 1197
		input {
			#bands: 50hz,100hz,156hz,220hz,311hz,440hz,622hz,880hz,1250hz,1750hz,
			#25000hz,50000hz,10000hz,20000hz
			controls [ -5 -5 -5 -5 -5 -10 -20 -15 -10 -10 -10 -10 -10 -3 -2 ]
		}
	}
	]
}
pcm.plugeq { type ladspa; slave.pcm eq; }
## EQUALIZER
ctl.equal { type equal; }
pcm.equal { 
	type equal
	# hardware mixer
	#slave.pcm "plughw:0,1"
	# software mixer
	slave.pcm plug:dmix
}
pcm.plugequal { type plug; slave.pcm equal; }
## ALSA EMULATION
pcm.alsa {
	type oss
	device /dev/oss/oss_cmi878x0/pcm1
}
mixer.alsa {
	type oss
	device /dev/oss/oss_cmi878x0/mix1
}
## OSS EMULATION (through the EQ)
pcm.dsp0 { type plug; slave.pcm eq; }
## DEFAULT
# output through hardware directly
ctl.!default { type hw; slave.ctl hda; }
pcm.!default { type hw; slave.pcm hda; }
