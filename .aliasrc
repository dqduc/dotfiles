alias ipr='~/.scripts/ipr'
alias iru='~/.scripts/iru'
alias lbd='~/.scripts/lbd'

alias pu='pushd'
alias po='popd'

alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias lsd='ls -d *$@*'
alias lad='ls -Ad .*$@*'
alias lsa='ls -Ad .*$@*'
alias lsn='ls -hrtl *$@* | tail'
alias lso='ls -hrtl *$@* | head'
alias lsl='ls -Alh'
alias halt='sudo /sbin/halt'
alias root='sudo /sbin/reboot'
alias cl='clear'
alias md='mkdir'
alias rd='rmdir'
alias hy='history'
alias mo='more'
alias le='less'
alias gr='grep'
alias hl='history|less'
alias ct="tar -cvpf"
alias xt="tar -xvpf"

alias esync='layman -s ALL && eix-sync'

alias eqf='equery f'
alias equ='equery u'
alias eqh='equery h'
alias eqa='equery a'
alias eqb='equery b'
alias eql='equery l'
alias eqd='equery d'
alias eqg='equery g'
alias eqc='equery c'
alias eqk='equery k'
alias eqm='equery m'

