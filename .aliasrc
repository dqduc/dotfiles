# Push and pop directories on directory stack
alias ipr='~/.scripts/ipr'
alias iru='~/.scripts/iru'
alias mks4='~/.scripts/mkstg4.bash'
alias sdr='sdr.bash'
alias mkifs='mkifs-ll.bash'
alias pu='pushd'
alias po='popd'

alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias lsd='ls -d *$@*' 	 # only show directories
alias lad='ls -Ad .*$@*' # only show dot-directories/files
alias lsa='ls -Ad .*$@*' # only show dot-files
alias lsn='ls -hrtl *$@* | tail' # display the newest files
alias lso='ls -hrtl *$@* | head' # display the oldest files
alias lsl='ls -Alh'
alias halt='sudo /sbin/halt'
alias root='sudo /sbin/reboot'
alias cl='clear'
alias md='mkdir'
alias rd='rmdir'
alias hy='history'
alias mo='more'
alias le='less'
alias gr='grep'
alias hl='history|less'
alias ct="tar -cvpf"
alias xt="tar -xvpf"

alias esync='layman -s ALL && eix-sync'

# and here follow a set of (logical/lexical) equery aliases
alias eqf='equery f'
alias equ='equery u'
alias eqh='equery h'
alias eqa='equery a'
alias eqb='equery b'
alias eql='equery l'
alias eqd='equery d'
alias eqg='equery g'
alias eqc='equery c'
alias eqk='equery k'
alias eqm='equery m'

