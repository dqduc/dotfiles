# @FUNCTION: genpwd
# @DESCRIPTION: generate a random password using openssl to stdout
function genpwd()
{
	openssl rand -base64 48
}

# @FUNCTION: xkc
# @DESCRIPTION: simple Xev KeyCode
function xkc()
{
	xev | grep -A2 --line-buffered '^KeyRelease' | \
	sed -nre '/keycode /s/^.*keycode ([0-9]*).* (.*, (.*)).*$/\1 \2/p'
}

