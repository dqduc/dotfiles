# $Id: ~/scr/functions, 2014/08/08 11:59:26 -tclover Exp $

# @FUNCTION: xkc
# @DESCRIPTION: simple Xev KeyCode
function xkc()
{
    xev | grep -A2 --line-buffered '^KeyRelease' | \
    sed -nre '/keycode /s/^.*keycode ([0-9]*).* (.*, (.*)).*$/\1 \2/p'
}

